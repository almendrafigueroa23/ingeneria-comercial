<script>
const materias = document.querySelectorAll('.materia');

materias.forEach(materia => {
  materia.addEventListener('click', () => {
    if (materia.classList.contains('bloqueada')) return;

    materia.classList.toggle('completada');

    materias.forEach(m => {
      const req = m.getAttribute('data-req');
      if (req) {
        const reqs = req.split(',');
        const allOk = reqs.every(id => document.getElementById(id).classList.contains('completada'));
        if (allOk) {
          m.classList.remove('bloqueada');
        } else {
          m.classList.add('bloqueada');
          m.classList.remove('completada');
        }
      }
    });
  });
});
</script>
